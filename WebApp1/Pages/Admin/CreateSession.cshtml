@page
@model WebApp1.Pages.Admin.CreateSessionModel
@{
    ViewData["Title"] = "Create new session";
}
<h4>New session</h4>
<div>
    <a asp-page="Sessions">Back</a>
</div>
<div>
    <form method="post">
        <div class="row mb-2">
            <a class="col-sm-10" asp-page="CreateCourse">Create new course</a>
            <a class="col-sm-2" asp-page="CourseList">View courses</a>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row mb-4">
            <label class="col-sm-2 col-form-label">Course</label>
            <div class="col-sm-10 p-0">
                <select class="form-control m-0" asp-for="SelectedCourseId" asp-items="Model.SelectCourse">
                    <option value="">Select a course</option>
                </select>
                <span asp-validation-for="SelectedCourseId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Time</label>
            <div class="col-sm-10 p-0">
                <input class="form-control" asp-for="DateTime" asp-format="{0:yyyy-MM-ddTHH:mm}"/>
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <a class="col-sm-10" asp-page="UploadPlan">Create new classroom</a>
            <a class="col-sm-2" asp-page="ClassroomList">View classrooms</a>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Classroom</label>
            <div class="col-sm-10 p-0">
                <select class="form-control m-0" asp-for="SelectedClassroomId" asp-items="Model.SelectClassroom">
                    <option value="">Select a classroom</option>
                </select>
                <span asp-validation-for="SelectedClassroomId" class="text-danger"></span>
            </div>
        </div>
        <input type="submit" value="Create" class="btn btn-primary" />
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}