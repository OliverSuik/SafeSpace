@page
@model WebApp1.Pages.Admin.CreateCourseModel
@{
    ViewData["Title"] = "New course";
}
<h3>New course</h3>
<div>
    <a asp-page="CreateSession">Back</a>
</div>
<div>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Course.Name" class="col-sm-2 col-form-label control-label"></label>
            <div class="col-sm-10">
                <input asp-for="Course.Name" class="form-control">
            </div>
            <span asp-validation-for="Course.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Course.Lecturer" class="col-sm-2 col-form-label control-label"></label>
            <div class="col-sm-10">
                <input asp-for="Course.Lecturer" class="form-control">
            </div>
            <span asp-validation-for="Course.Lecturer" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
