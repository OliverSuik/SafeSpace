@page
@model WebApp1.Pages.Admin.ClassroomListModel
@{
    ViewData["Title"] = "Classrooms";
}
<h4>Classrooms</h4>
<a asp-page="CreateSession">Back</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Classroom[0].Number)
            </th>
            <th>
                Seats
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Classroom)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Seats.Count)
                </td>
                <td class="text-right">
                    <a asp-page="ViewClassroom" asp-route-id="@item.ID">View</a> |
                    <a asp-page="DeleteClassroom" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
