@page
@model WebApp1.Pages.Admin.RemoveLecturerModel
@{
    ViewData["Title"] = "Remove lecturer";
}

<h1>Delete</h1>

<h3>Are you sure you want to remove this lecturer?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            User: @Html.DisplayFor(model => model.Lecturer.Email)
        </dt>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Lecturer.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="ManageLecturers">Back to List</a>
    </form>
</div>