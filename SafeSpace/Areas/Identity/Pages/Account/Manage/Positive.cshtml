@page
@model SafeSpace.Areas.Identity.Pages.Account.Manage.PositiveModel
@{
    ViewData["Title"] = "Tested positive";
    ViewData["ActivePage"] = ManageNavPages.TestedPositive;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />

@if (Model.MessageSent)
{
    <p>Your message has been sent.</p>
}
else
{
    if (Model.Sessions.Count == 0)
    {
        <p>You have not attended any sessions.</p>
    }
    else
    { <form method="post">
            <div class="form-group">
                <label for="exampleFormControlTextarea1">This message will be sent to the administrator who will contact you for additional information.</label>
                <textarea asp-for="MainText" class="form-control" id="textarea" rows="5"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Send message" class="btn btn-primary" />
            </div>
        </form>
    }
}

