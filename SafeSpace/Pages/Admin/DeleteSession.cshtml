@page
@model SafeSpace.Pages.Admin.DeleteSessionModel
@{
    ViewData["Title"] = "Delete session";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this session?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.Course)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.Course.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.ClassRoom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.ClassRoom.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.Time)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Session.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="Sessions">Back to List</a>
    </form>
</div>