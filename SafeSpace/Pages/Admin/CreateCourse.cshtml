@page
@model SafeSpace.Pages.Admin.CreateCourseModel
@{
    ViewData["Title"] = "New course";
}
<h3>New course</h3>
<div>
    <a asp-page="CreateSession">Back</a>
</div>
<div>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Course.Name" class="col-sm-2 col-form-label control-label"></label>
            <div class="col-sm-10 p-0">
                <input asp-for="Course.Name" class="form-control">
                <span asp-validation-for="Course.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Course.CourseCode" class="col-sm-2 col-form-label control-label"></label>
            <div class="col-sm-10 p-0">
                <input asp-for="Course.CourseCode" class="form-control">
                <span asp-validation-for="Course.CourseCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-4">
            <label class="col-sm-2 col-form-label">Lecturer</label>
            <div class="col-sm-10 p-0">
                <select class="form-control m-0" asp-for="SelectedLecturerId" asp-items="Model.SelectLecturer">
                    <option value="">Select a lecturer</option>
                </select>
                <span asp-validation-for="SelectedLecturerId" class="text-danger" />
            </div>
        </div>
        <div class="form-group row">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}