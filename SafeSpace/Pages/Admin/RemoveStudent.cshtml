@page
@model SafeSpace.Pages.Admin.RemoveStudentModel
@{
    ViewData["Title"] = "Remove student";
}

<h1>Remove student</h1>

<h3>Are you sure you want to remove this student?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name: @Html.DisplayFor(model => model.Student.Name)
        </dt>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Student.ID" />
        <input type="submit" value="Remove" class="btn btn-danger" /> |
        <a asp-page="Sessions">Back to List</a>
    </form>
</div>