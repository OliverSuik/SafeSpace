@page
@model SafeSpace.Pages.Admin.ViewClassroomModel
@{
    ViewData["Title"] = "View classroom";
}

<h4>Classroom @Model.Classroom.Name</h4>
<a asp-page="ClassroomList">Back</a>
<div class="image-container">
    @if (@Model._backGroundImage == null)
    {
        <p>Loading...</p>
    }
    else
    {
        <div class="floor-image" style="background-image: url(@Model._backGroundImage)" />
        @foreach (var seat in Model.Classroom.Seats)
        {
            <div class="square" style="left: @(seat.X)px; top: @(seat.Y)px">
                -
            </div>
        }
    }
</div>